
{
  "compilerOptions": {
    "target": "es6",                 // Set the JavaScript version to compile to
    "module": "commonjs",            // CommonJS modules are used by Node.js
    "outDir": "./out",               // Redirect output structure to the 'out' folder
    "rootDir": "./src",              // Specify the root directory of input files
    "strict": true,                  // Enable all strict type-checking options
    "esModuleInterop": true,         // Enables ES6 module emulation
    "skipLibCheck": true,            // Skip type checking of declaration files
		"sourceMap": true,
    "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references to the same file
  },
  "include": [
    "src/**/*.ts"                    // Specify the files to be compiled
  ],
  "exclude": [
    "node_modules",                  // Exclude the node_modules directory
    "**/*.spec.ts"                   // Exclude test files
  ]
}
